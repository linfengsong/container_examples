{
  "serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "File" },
      {
        "Args": {
          "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog",
          "path": "/var/log/bcp-applications/hellohelm.json",
          "shared": true
        }
      }    
    ]
  },
  "AllowedHosts": "*"
}